<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <com.roshaan.example.CustomSheetsContainer
        android:id="@+id/sheetContainer"
        android:layout_width="0dp"
        android:layout_height="490dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:sheetsCount="3"
        app:sheetsHeightDifference="40dp"
        app:sheetsTopCornerRadius="20dp"/>

    <com.roshaan.example.CustomSheet
        android:id="@+id/sheet1"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:background="#ff0000"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <com.roshaan.example.CustomSheet
        android:id="@+id/sheet2"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#f0f000"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <com.roshaan.example.CustomSheet
        android:id="@+id/sheet3"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="#00ff00"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


